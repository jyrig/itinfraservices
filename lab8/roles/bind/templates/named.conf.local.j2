zone "pythonux.ttu" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.pythonux";
  allow-transfer {192.168.56.103;};
	notify yes;
{% else %}
  type slave;
  file "/var/lib/bind/db.pythonux";
  masters {
    {{ master_ip }};
  };
{% endif %}
};

zone "56.168.192.in-addr.arpa" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.pythonux.ptr";
  allow-transfer {192.168.56.103;};
{% else %}
  type slave;
  file "/var/lib/bind/db.pythonux.ptr";
  masters {
    {{ master_ip }};
  };
{% endif %}
};
